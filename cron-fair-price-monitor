#!/bin/bash
# Cron job script for MEXC fair price monitoring
# Add to crontab with: crontab -e
# Example: */5 * * * * /path/to/cron-fair-price-monitor

# Set working directory to script location
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Activate virtual environment if it exists
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
fi

# Run the fair price monitor
python fair_price_monitor.py >> logs/fair_price_monitor.log 2>&1

# Exit with success
exit 0